            <!-- data table start-->  
            <table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_striped" role="grid">
                <thead>
                    <tr class="slds-text-title_caps">
                        <!--header checkbox for select all-->
                        <th style="width:3.25rem;" class="slds-text-align_right">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <label class="slds-checkbox">
                                        <ui:inputCheckbox disabled="{!v.totalRecordsCount == 0}"
                                                          aura:id="selectAllId"
                                                          change="{!c.selectAllCheckbox}"/>
                                        <span class="slds-checkbox_faux"></span>
                                        <span class="slds-form-element__label"></span>
                                    </label>
                                </div>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Name">Name</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Family">Unit Price</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="Code">Plant</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">Option No.</div>
                        </th> 
                        <th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">Discount</div>
                        </th> 
                        <th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">Cavity</div>
                        </th> 
                        
                        <th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">OP. Qty</div>
                        </th> 
                        <th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">Pricing Type</div>
                        </th> 
                         <!--<th scope="col">
                            <div class="slds-truncate" title="PriceBookEntry">Discount Description</div>
                        </th> -->
                        
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration items="{!v.PaginationList}" var="obj" indexVar="index">
                        <tr>
                            <th scope="row" class="slds-text-align_right" style="width:3.25rem;">
                                <div class="slds-form-element">
                                    <div class="slds-form-element__control">
                                        <label class="slds-checkbox" styleclass ="Padding:initial;padding-top:10px;">
                                            <ui:inputCheckbox text="{!obj.objLead.Id}"
                                                              value="{!obj.isChecked}"
                                                              change="{!c.checkboxSelect}"/>
                                            <span class="slds-checkbox_faux"></span>
                                            <span class="slds-form-element__label text"></span>
                                        </label>
                                    </div>
                                </div>
                            </th>
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Product2.Name}">
                                    {!obj.objLead.Product2.Name}
                                </div>
                            </th> 
                            <th scope="row">
                                
                                <aura:if isTrue="{!v.userInfo.Level__c ==  'L1'}"> 
                                    <div class="slds-truncate" title="{!obj.objLead.UnitPrice}">
                                        {!v.currencyCode}&#160; {!obj.objLead.UnitPrice}
                                    </div>
                                </aura:if>
                                <aura:if isTrue="{!v.userInfo.Level__c == 'L2'}"> 
                                    <div class="slds-truncate" title="{!obj.objLead.List_Price_Level_2__c}">
                                        INR {!obj.objLead.List_Price_Level_2__c}
                                    </div>
                                </aura:if>
                                <aura:if isTrue="{!v.userInfo.Level__c == 'L3'}"> 
                                    <div class="slds-truncate" title="{!obj.objLead.List_Price_Level_3__c}">
                                        INR {!obj.objLead.List_Price_Level_3__c}
                                    </div>
                                </aura:if>
                            </th> 
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Product2.Plant__c}">
                                    {!obj.objLead.Product2.Plant__c}
                                </div>
                            </th> 
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Product2.Option_No__c}">
                                    {!obj.objLead.Product2.Option_No__c}
                                </div>
                            </th>
                            <th scope="row">
                                
                                <div class="slds-form-element__control">
                                    <span data-record="{!obj.objLead}">
                                        <aura:if isTrue="{!v.userInfo.Level__c == 'L1'}">
                                            <lightning:input id="text-input-id-1 " name="{!index}" value="{!obj.objLead.Discount__c}" placeholder="Placeholder Text" onchange="{!c.OnBlured}"/>
                                        </aura:if>
                                        <aura:if isTrue="{!v.userInfo.Level__c == 'L2'}">
                                            <lightning:input id="text-input-id-1 " name="{!index}" value="{!obj.objLead.Discount_Level_2__c}" placeholder="Placeholder Text" onchange="{!c.OnBlured}"/>
                                        </aura:if>
                                        <aura:if isTrue="{!v.userInfo.Level__c == 'L3'}">
                                            <lightning:input id="text-input-id-1 " name="{!index}" value="{!obj.objLead.Discount_Level_3__c}" placeholder="Placeholder Text" onchange="{!c.OnBlured}"/>
                                        </aura:if>
                                    </span>
                                </div>
                                
                            </th> 
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Product2.Number_Of_Cavity_Mould__c}">
                                    <lightning:input id="text-input-id-2 " name="{!index}" value="{!obj.objLead.Product2.Number_Of_Cavity_Mould__c}" placeholder="1"/>
                                </div>
                            </th>
                            
                            
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Quantity__c}">
                                    <lightning:input id="text-input-id-2 " name="{!index}" value="{!obj.objLead.Quantity__c}" placeholder="Quantity"/>
                                </div>
                            </th>
                            <th scope="row">
                                <div class="slds-truncate" title="{!obj.objLead.Pricing_Type__c}">
                                    {!obj.objLead.Pricing_Type__c}
                                </div>
                            </th>
                            <!-- <th scope="row">
                              <lightning:input name="input1" label="Enter some text" value="{!obj.objLead.Description__c}" Required ="{!v.DiscountValue}"/>
                            </th> -->
                            
                            
                            
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
            <!-- DataTable End -->
            <br/>
            <!--  Pagination Buttons Start -->
            <div class="slds-align_absolute-center">         
                <lightning:button label="Previous"
                                  disabled="{!v.startPage == 0}"  
                                  onclick="{!c.navigation}"
                                  variant="brand"
                                  iconName="utility:back"
                                  name="previous"/>
                
                <span class="slds-badge slds-badge_lightest"
                      style="margin-right: 10px;margin-left: 10px;">
                    Page {!v.currentPage} out of {!v.totalPagesCount}
                </span> 
                
                <lightning:button label="Next"
                                  disabled="{!(v.endPage + 1) >= v.totalRecordsCount}" 
                                  onclick="{!c.navigation}"
                                  variant="brand"
                                  iconName="utility:forward"
                                  iconPosition="right"
                                  name="next"/>
            </div>  
            <!--  Pagination Buttons End -->
        </aura:set> 
    </aura:if>
    
