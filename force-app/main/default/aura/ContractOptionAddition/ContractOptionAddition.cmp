                        <th scope="col">
                            <div class="slds-truncate" title="Discount">Quantity</div>
                        </th>
                         <!--<th scope="col">
                            <div class="slds-truncate" title="Discount">Discount Description</div>
                        </th> -->
                        
                        <th scope="col">
                            <div class="slds-truncate" title="Action">Action</div>
                        </th>
                    </tr>
                </thead>   
                <tbody>      
                    <aura:iteration items="{!v.OptionList}" var="acc" indexVar="index">
                        <tr>
                            <td> 
                                {!index + 1}
                            </td>
                            <td>
                                <lightning:input  name="{!index}" type="text" required="true" maxlength="50" label="Name" value="{!acc.Option_Name__c}" />
                            </td>
                            <td>
                                <lightning:input  id="text-input-id-3"  name="{!index}" type="text"  maxlength="10" label="List Price" value="{!acc.Manual_Option_List_Price__c}" />
                            </td>
                            <td>
                                <lightning:input  id="text-input-id-4" name="{!index}" type="phone" maxlength="10" label="Base Price" value="{!acc.Manual_Option_Base_Price__c}"/>
                            </td>
                            <!--<td>
                                <lightning:input name="{!index}" type="phone" maxlength="10" label="Price Type" value="{!acc.Price_Type__c}"/>
                            </td>-->
                           <!-- <td>
                                <lightning:input  id="text-input-id-2 " name="{!index}" type="phone" maxlength="10" label="Discount" value="{!acc.Discount__c}" onchange ="{!c.OnChangeDisc}"/>
                            </td> -->
                           <!-- <td>
                                <lightning:input  name="{!index}" type="phone" maxlength="10" label="Mould Cavity" value="{!acc.Mould_Cavity__c}"/>
                            </td>-->
                            <td>
                                <lightning:input  name="{!index}" type="phone" maxlength="10" label="Quantity" value="{!acc.Quantity__c}"/>
                            </td>
                             <!--<td>
                                <lightning:input  name="{!index}" type="text" maxlength="10" label="Discount Description" value="{!acc.Discount_Description__c}" required="{!v.DiscountValuemanula}"/>
                            </td>-->
                            
                            <td>
                                <a onclick="{!c.removeRow}" data-record="{!index}">
                                    <lightning:icon iconName="utility:delete" size="small" alternativeText="Delete"/>
                                    <span class="slds-assistive-text">Delete</span>
                                </a>
                            </td> 
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
            <!--  <div class="slds-align_absolute-center slds-p-top_small">
                <lightning:button variant="brand" label="Submit" title="Brand action" onclick="{!c.save}" />
            </div>   -->
        </div>
    </div>
    
</aura:component>