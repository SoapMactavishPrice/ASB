        <div class="slds-text-color_inverse">Add options For {!v.gacRecord.Name} Contract</div>
    </div>
    <force:recordData aura:id="record"
                      layoutType="FULL"
                      recordId="{!v.recordId}"
                      targetError="{!v.recordError}"
                      targetRecord="{!v.record}"
                      targetFields="{!v.gacRecord}"
                      recordUpdated="{!c.doInit}" 
                      mode="VIEW"/>
    
    
