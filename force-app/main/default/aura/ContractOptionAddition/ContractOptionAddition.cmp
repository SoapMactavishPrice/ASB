    <aura:attribute name="myAttribute2" type="String"/>
    
    <aura:attribute name="ContractLineItmInstance" type="Contract_Line_Item__c"/>
    <aura:attribute name="PercentPick" type="Contract_Line_Item__c[]" />
    
    
    <aura:attribute name = "wrappedOptions" type="List"/>
    <aura:attribute name="filter" type="String" />
    
    <aura:attribute name="DiscountReason" type="String" />
    <aura:attribute name="DiscountValue" type="Boolean" default="true"/>
     <aura:attribute name="DiscountValuemanula" type="Boolean" default="false"/>
    
    <aura:handler name="change" value="{!v.filter}" action="{!c.doFilter}" />  
    <aura:handler name="change" value="{!v.filter}" action="{!c.doFilter}" /> 
    <aura:attribute name="lstFieldNames" type="List" default="[{'label' : 'Name', 'apiName' : 'Name'},
