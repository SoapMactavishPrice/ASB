<apex:page standardController="Contract"  extensions="Create_Project_Controller" lightningStylesheets="true">
    
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
            <apex:pageMessages ></apex:pageMessages>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Line Items and Line Numbers">
                <apex:selectList value="{!strSelected}" multiselect="false" size="1">
                    <apex:selectOptions value="{!options}"/>
                </apex:selectList>
                <apex:commandButton title="Create Project" value="Create Project" action="{!ProjectCreation}" style="align:left;" />
            </apex:pageBlockSection>
            
        </apex:pageBlock>
        
    </apex:form>
    
</apex:page>